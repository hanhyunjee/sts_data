	<select id="selectAllNoticeList" resultMap="noticesResult">
    <![CDATA[
     SELECT rnum, T.*
   FROM ( SELECT noticeId, adminId, boardDate, title, content, viewCnt, imageFileName, ROW_NUMBER() OVER(ORDER BY originNo desc) as rnum
                   FROM notice) T
  WHERE rnum BETWEEN #{startList} AND #{endList}
    ]]>
	</select>
	
	<select id="selectAllNoticeListById" resultMap="noticesResult" parameterType="map">
    <![CDATA[
     SELECT rnum, T.*
   FROM ( SELECT noticeId, adminId, boardDate, title, content, viewCnt, imageFileName, ROW_NUMBER() OVER(ORDER BY originNo desc) as rnum
                   FROM notice) T
  WHERE adminId = #{id} and rnum BETWEEN #{pagination.startList} AND #{pagination.endList}
    ]]>
	</select>



	<insert id="addNotice" parameterType="noticeVO">
	<![CDATA[
			insert into notice(noticeId,  adminId, title, content, imageFileName, originNo)
			values(seq_notice_noticeId.nextval, #{adminId}, #{title}, #{content}, #{imageFileName,jdbcType=VARCHAR}, seq_notice_noticeId.nextval)
			]]>
	</insert>

	
	<update id="updateNotice" parameterType="noticeVO">
	<![CDATA[
		update notice set
            content = #{content}
            , boardDate = sysdate
            , imageFileName = #{imageFileName,jdbcType=VARCHAR}
        where
            noticeId = #{noticeId}
            	]]>
	</update>

	<select id="getNoticeListCnt" resultType="int">
		<![CDATA[ select count(*) as listCnt from notice ]]>
	</select>
	
	<select id="getNoticeListCntById" resultType="int" parameterType="String">
		<![CDATA[ select count(*) as listCnt from notice where adminId = #{id} ]]>
	</select>

	<select id="selectByNoticeId" resultType="noticeVO">
		<![CDATA[
		select * from notice where noticeId = #{noticeId}
		]]>
	</select>

	<delete id="deleteNotice" parameterType="Map">
	<![CDATA[
		delete from notice
		where originNo = #{originNo}
			]]>
	</delete>

	<update id="increaseViewCnt" parameterType="String">
	<![CDATA[
		update notice set viewCnt = viewCnt + 1
		where noticeId = #{noticeId}
		]]>
	</update>
